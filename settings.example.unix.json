{
    "hooks": {
        "SessionStart": [
            {
                "matcher": "startup",
                "hooks": [
                    {
                        "type": "command",
                        "command": "python3 ~/.claude/scripts/session_hooks.py start --silent"
                    },
                    {
                        "type": "command",
                        "command": "python3 ~/.claude/scripts/explorer_helper.py . --silent"
                    },
                    {
                        "type": "command",
                        "command": "python3 ~/.claude/scripts/token_tracker.py reset"
                    }
                ]
            }
        ],
        "PreToolUse": [
            {
                "matcher": "Bash",
                "hooks": [
                    {
                        "type": "command",
                        "command": "python3 ~/.claude/scripts/pre_bash.py \"$TOOL_INPUT\""
                    }
                ]
            }
        ],
        "PostToolUse": [
            {
                "matcher": "Bash",
                "hooks": [
                    {
                        "type": "command",
                        "command": "python3 ~/.claude/scripts/track_error.py \"$TOOL_INPUT\" \"$EXIT_CODE\" \"$TOOL_OUTPUT\""
                    }
                ]
            },
            {
                "matcher": "",
                "hooks": [
                    {
                        "type": "command",
                        "command": "python3 ~/.claude/scripts/token_tracker.py track \"$TOOL_NAME\" \"$TOOL_INPUT\" \"$TOOL_OUTPUT\""
                    }
                ]
            }
        ],
        "SessionEnd": [
            {
                "matcher": "",
                "hooks": [
                    {
                        "type": "command",
                        "command": "python3 ~/.claude/scripts/token_tracker.py summary"
                    },
                    {
                        "type": "command",
                        "command": "python3 ~/.claude/scripts/session_hooks.py end --silent"
                    }
                ]
            }
        ]
    }
}
